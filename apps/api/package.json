{
    "name": "api",
    "description": "API NodeJS microservice",
    "author": "Gerard <gerard.domenech.cobos@gmail.com>",
    "version": "0.0.1",
    "private": true,
    "main": "index.js",
    "workspaces": [
        "bundles/*",
        "plugins/aws/*"
    ],
    "workspaces_examples": [
        "plugins/aws/*"
    ],
    "scripts": {
        "build": "tsc && yarn workspaces run build",
        "start": "yarn && NODE_ENV=production node ./dist/index.js",
        "prod": "yarn build && yarn start",
        "dev": "ts-node-dev --respawn --pretty --transpile-only index.ts",
        "test": "jest --forceExit"
    },
    "dependencies": {
        "express": "~4.17.1",
        "dotenv": "~16.3.1",
        "cookie-parser": "~1.4.6",
        "cors": "~2.8.5",
        "moment": "~2.30.1",
        "multer": "~1.4.5-lts.1",
        "zod": "~3.23.8",
        "cron": "~3.1.7"
    },
    "devDependencies": {
        "@types/express": "^4.17.13",
        "@types/node": "^17.0.10",
        "ts-node-dev": "2.0.0",
        "ts-node": "~10.9.1",
        "typescript": "^4.5.5",
        "@babel/preset-typescript": "~7.23.2",
        "@jest/globals": "~29.7.0",
        "@types/jest": "~29.5.5",
        "jest": "~29.7.0",
        "ts-jest": "~29.1.1"
    }
}