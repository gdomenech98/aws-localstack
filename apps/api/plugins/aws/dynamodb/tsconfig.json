{
    "compilerOptions": {
        "target": "ES6",
        "strict": false,
        "outDir": "./dist",
        "types": [
            "node",
            "jest"
        ],
        "esModuleInterop": true,
        "module": "commonjs",
        "moduleResolution": "node",
        "incremental": true,
        "composite": true,
        "forceConsistentCasingInFileNames": true,
        "skipLibCheck": true
    },
    "include": [
        "./**/*.ts",
        "index.ts"
    ],
    "exclude": [
        "node_modules",
        "dist",
        "./**/*.test.ts"
    ]
}